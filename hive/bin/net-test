#!/usr/bin/env bash
. colors

[[ -e $RIG_CONF ]] && . $RIG_CONF

# hosts on ports 80 and 443
API_HOSTS=("api.hiveos.farm" "helsinki.hiveos.farm" "msk.hiveos.farm" "paris.hiveos.farm" "amster.hiveos.farm")
# urls for other ports
API_URLS=("https://api.hiveos.farm:8443" "http://helsinki.hiveos.farm:8000")
# just to check connection
OTHER_DNS=("8.8.8.8" "1.1.1.1" "114.114.114.114")

[[ $1 == "-a" || $1 == "--advanced" ]] &&
	CYCLES=3

HEADER_COLOR=$YELLOW
CASE_COLOR=$BCYAN
WARN_COLOR=$LGREEN
ERROR_COLOR=$BRED

OK=$GREEN"[OK]"$NOCOLOR

FAIL=$RED"[FAIL]"$NOCOLOR
LAST_RESULT=0

GOODTIME=1000

unset GREP_OPTIONS

CASE_WIDTH='%-64s'


LOCAL_IP=`hostname -I | awk '{print $1}'`
LOCAL_GW=`ip route | awk '/default/ { print $3 }'`

#LOCAL_DNS=`nslookup server | grep Server | cut -d ":" -f 2 | sed -e 's/^[ \t]*//'`
LOCAL_DNS=(`cat /run/systemd/resolve/resolv.conf | grep ^nameserver | awk '{print $2}'`)


function merge_all_dns {
	ALL_DNS=()
	local DNS=("${LOCAL_DNS[@]}")
	# merge all servers
	DNS+=("${OTHER_DNS[@]}")
	# remove duplicates, empty and localhost
	for ip in "${DNS[@]}"
	do
		[[ ! $ip =~ ^127\.0\.0\.[0-9]+$ && $ip =~ ^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$ && ! " ${ALL_DNS[@]} " =~ " $ip " ]] &&
			ALL_DNS+=($ip)
	done
}


function PrintCase {
	printf "$CASE_COLOR%-64s" "$1"
}


function TimeColor {
	[[ $1 -le $GOODTIME ]] && echo "${WHITE}$1 ms${NOCOLOR}" || echo "${RED}$1 ms${NOCOLOR}"
}


# ping wrapper
function Ping {
	local LAST_RESULT=0
	local IP=$2
	local response=
	[ -z ${IP} ] && IP=$1

	PrintCase "ping $1"
	for((i=0; i<${CYCLES:-1}; i++))
	do
		response=`ping -i 0 -q -c 1 -w 4 $IP 2>&1`
		LAST_RESULT=$?
		if [[ $LAST_RESULT -eq 0 ]]; then
			local totaltime=`echo "$response" | awk -F '/' 'END {print $5}'`
			totaltime=`bc <<< "scale=0;($totaltime+0.99)/1"`
			total=`TimeColor $totaltime`
			[[ $i -eq 0 ]] && echo -en "$OK\t$total\t" || echo -en "$total\t"
			[[ $totaltime -ge $((GOODTIME*2)) ]] && break
		else
			#echo -en "$FAIL\t" && break
			[[ $i -eq 0 && $CYCLES -gt 1 ]] && echo -en $YELLOW"[???]\t$FAIL\t" || echo -en "$FAIL\t"
		fi
	done
	echo
	return $LAST_RESULT
}


# curl wrapper
function Curl {
	local LAST_RESULT=0
	local checkApi=$2
	local IP=
	local response=
	[ -z ${IP} ] && IP=$1

	[[ "$1" == "$HIVE_HOST_URL" ]] &&
		PrintCase "curl $1 (CURRENT)" ||
		PrintCase "curl $1"

	for((i=0; i<${CYCLES:-1}; i++))
	do
		if [[ $checkApi != "api" ]]; then
			response=`curl --insecure --connect-timeout 7 --max-time 15 --silent $IP -w "\n%{time_total}"`
		else
			response=`curl --insecure --connect-timeout 7 --max-time 15 --silent -w "\n%{time_total}"\
				-H "Content-Type: application/json" \
				-X POST -d '{"method":"stats", "params": {"rig_id":"-1", "passwd": "1"}}' \
				$IP/worker/api`
		fi
		LAST_RESULT=$?
		if [[ $LAST_RESULT -eq 0 ]] && [[ $checkApi != "api" || ! -z $(jq -c "if .error.code then . else empty end" 2>/dev/null <<< "$response") ]]; then
			local totaltime=`echo "$response" | tail -1`
			totaltime=`bc <<< "scale=0;$totaltime*1000/1"`
			total=`TimeColor $totaltime`
			[[ $i -eq 0 ]] && echo -en "$OK\t$total\t" || echo -en "$total\t"
			[[ $totaltime -ge $((GOODTIME*2)) ]] && break
		else
			#echo -en "$FAIL\t" && break
			[[ $i -eq 0 && $CYCLES -gt 1 ]] && echo -en $YELLOW"[???]\t$FAIL\t" || echo -en "$FAIL\t"
		fi
	done
	echo
	return $LAST_RESULT
}


# nslookup wrapper
function NSLookup {
	local LAST_RESULT=0
	local IP=
	[ -z ${IP} ] && IP=$1

	PrintCase "nslookup $1"
	#`nslookup $IP > /dev/null 2>&1`
	res=(`dig -4 +noall +answer +retry=0 +time=15 $IP | grep -oP ".*\sA\s\K[^\s]+$"`)
	LAST_RESULT=$?
	[[ $LAST_RESULT -eq  0 ]] && echo -e "$OK\t${CYAN}${res[@]}$NOCOLOR" || echo -e $FAIL
	return $LAST_RESULT
}


# check host with dns resolving, ip, http, https cases
function Connection {
	local LAST_RESULT=0
	local RESULT=0
	local host=$1
	local checkApi=$2

	NSLookup $1
	[ $? -ne 0 ] && echo -e $ERROR_COLOR"Please check your DNS server $DNS"$NOCOLOR && return $LAST_RESULT

	Ping $1
	[ $? -ne 0 ] && echo -e $ERROR_COLOR"Please check your connection settings"$NOCOLOR

	Curl "http://$1" $checkApi
	[ $? -ne 0 ] && echo -e $ERROR_COLOR"HTTP connection failed. Please check Firewall rules or connection setup"$NOCOLOR

	Curl "https://$1" $checkApi
	[ $? -ne 0 ] && echo -e $ERROR_COLOR"HTTPS (SSL) connection failed. Please check Firewall rules or connection setup"$NOCOLOR

	return $LAST_RESULT
}


# connections test cases
function Connections {
	echo -e "${YELLOW}> Checking network connection:${NOCOLOR}"
	Ping "$LOCAL_GW (Gateway)" $LOCAL_GW
	[ $? -ne 0 ] && echo -e $ERROR_COLOR"Failed to ping router. Please check your router and physical connection"$NOCOLOR

	for host in "${ALL_DNS[@]}"
	do
		[[ $host == $LOCAL_GW ]] && continue;
		Ping "$host (DNS)" "$host"
		[ $? -ne 0 ] && echo -e $ERROR_COLOR"Failed to ping DNS. Please check your internet connection"$NOCOLOR
	done

	#[[ ! -z $HIVE_HOST_URL ]] && API_HOST=`echo $HIVE_HOST_URL | awk -F'://' '{print $2}'` || API_HOST=
	API_HOST=`grep -oP "://\K[^:]+" <<< "$HIVE_HOST_URL"`
	[[ -z $API_HOST ]] && echo -e $ERROR_COLOR"No API server defined in rig.conf"$NOCOLOR && exit 1

	if (echo "$API_HOST" | grep -q "hiveos.farm"); then
		echo
		Connection "hiveos.farm"
	fi

	echo
	echo -e "${YELLOW}> Checking connection to worker API servers:${NOCOLOR}"
	echo

	if (echo "$API_HOST" | grep -q "hiveos.farm"); then
		[[ ! " ${API_HOSTS[@]} " =~ " ${API_HOST} " ]] &&
			API_HOSTS+=($API_HOST)

		for host in "${API_HOSTS[@]}"
		do
			[[ $host == $API_HOST ]] && echo -e "${WHITE}>>> $host (CURRENT)${NOCOLOR}" || echo -e "${WHITE}>>> $host${NOCOLOR}"
			Connection "$host" api
			if [[ "${API_URLS[@]}" =~ /$host ]]; then
				for url in "${API_URLS[@]}"
				do
					[[ ! $url =~ /$host ]] && continue
					Curl $url api
				done
			fi
			echo
		done
	else
		echo -e "${WHITE}>>> $API_HOST (CURRENT)${NOCOLOR}"
		Connection "$API_HOST" api
	fi
}


