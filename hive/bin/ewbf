#!/usr/bin/env bash

THIS_MINER_NAME="ewbf"
[ -t 1 ] && . colors

[[ `ps aux | grep "/hive/ewbf/miner" | grep -v grep | wc -l` != 0 ]] &&
	echo -e "${RED}$THIS_MINER_NAME miner is already running${NOCOLOR}" &&
	exit 1




function config_gen() {
	RIG_CONF="/hive-config/rig.conf"
	WALLET_CONF="/hive-config/wallet.conf"
	EWBF_CONFIG="/hive/ewbf/miner.cfg"

	[ ! -f $RIG_CONF ] && echo -e "${RED}No rig config $RIG_CONF${NOCOLOR}" && return 1
	[ ! -f $WALLET_CONF ] && echo -e "${RED}No wallet config $WALLET_CONF${NOCOLOR}" && return 1

	. $RIG_CONF
	. $WALLET_CONF

	[[ -z $WORKER_NAME ]] && echo "ERROR: No WORKER_NAME set" && return 1


	[[ ! -z $ZSERVER ]] && sed -i "s/^server .*/server $ZSERVER/g" $EWBF_CONFIG || echo "ZSERVER not set"
	[[ ! -z $ZPORT ]] && sed -i "s/^port .*/port $ZPORT/g" $EWBF_CONFIG || echo "ZPORT not set"
	[[ ! -z $ZPASS ]] && sed -i "s/^pass .*/pass $ZPASS/g" $EWBF_CONFIG || echo "ZPASS not set"


	#[[ -z $ZWAL ]] && echo -e "${RED}ZWAL not set{NOCOLOR}"

	if [[ -z $ZTEMPLATE ]]; then
		echo -e "${RED}ZTEMPLATE not set{NOCOLOR}"
	else
		[[ ! -z $ZWAL ]] && ZTEMPLATE=${ZTEMPLATE/\%ZWAL\%/$ZWAL} || "${RED}ZWAL not set${NOCOLOR}"
		[[ ! -z $WORKER_NAME ]] && ZTEMPLATE=${ZTEMPLATE/\%WORKER_NAME\%/$WORKER_NAME} || echo "${RED}WORKER_NAME not set${NOCOLOR}";
		[[ ! -z $EMAIL ]] && ZTEMPLATE=${ZTEMPLATE/\%EMAIL\%/$EMAIL} #|| echo "EMAIL not set";

		#escape variable
		ZTEMPLATE=$(sed 's/[]\/$*.^|[]/\\&/g' <<<"$ZTEMPLATE")
		sed -i "s/^user .*/user $ZTEMPLATE/g" $EWBF_CONFIG
	fi

	#ZWAL="t1VS4MURTc5HxV3Hm85HsCXRHHN5Etss9vH"
	#ZSERVER="zec-eu1.nanopool.org"
	#ZTEMPLATE="%ZWAL%/%WORKER_NAME%/%EMAIL%"
	#ZPORT="6666"
	#ZPASS="z"

	#[server]
	#server zec-eu1.nanopool.org
	#port   6666
	#user   t1VS4MURTc5HxV3Hm85HsCXRHHN5Etss9vH/worker/fern@kgroup.biz
	#pass   z
}


config_gen


LOG_BASENAME="miner"
function logs_rotate() {
	[[ -e $LOG_BASENAME.5.log ]] && rm $LOG_BASENAME.5.log
	[[ -e $LOG_BASENAME.4.log ]] && mv -f $LOG_BASENAME.4.log $LOG_BASENAME.5.log
	[[ -e $LOG_BASENAME.3.log ]] && mv -f $LOG_BASENAME.3.log $LOG_BASENAME.4.log
	[[ -e $LOG_BASENAME.2.log ]] && mv -f $LOG_BASENAME.2.log $LOG_BASENAME.3.log
	[[ -e $LOG_BASENAME.1.log ]] && mv -f $LOG_BASENAME.1.log $LOG_BASENAME.2.log
	[[ -e $LOG_BASENAME.log ]] && mv -f $LOG_BASENAME.log $LOG_BASENAME.1.log
}



cd /hive/$THIS_MINER_NAME
while true
do
	#try to release TIME_WAIT sockets
	for con in `netstat -anp | grep TIME_WAIT | grep 42000 | awk '{print $5}'`; do
		killcx $con lo
	done

	logs_rotate
	/hive/$THIS_MINER_NAME/miner
	echo ""
	echo "Miner process exited, waiting to cooldown a bit"
	echo ""
	sleep 3
done
